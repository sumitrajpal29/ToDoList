<body>
<div class="box" id="heading">
    <h1><%= HEADING %></h1>
</div>

<div class="box">
  <% NEWiTEMS.forEach((item) => { %>
    <div class="item">
      <form action="/delete" method="post">
        <input type="checkbox" name="CheckBox" value=<%=item._id%> onchange= "this.form.submit()">
      </form>
      <p><%= item.name %></p>
    </div>
  <% }); %>

    <form class="item" action="/" method="post">
      <input type="text" name="NEWiTEMS" maxlength="30" placeholder="New Item" required autofocus autocomplete="off" >
      <button type="submit" name=button value=<%= buttonValue %>>+</button>
    </form>
</div>

<%-include('footer')-%>
